[diff]
    tool = vimdiff

[difftool]
    prompt = false

[commit]
    gpgsign = true

[core]
    excludesfile = ~/dotfiles/.mygitignore
    pager = less -+FX -r

[pull]
    rebase = false

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[include]
    path = ~/.gitconfig-work
